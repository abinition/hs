<func id="toupper">
  <brief>
    Convert to uppercase.
  </brief>
  <args>
    <arg id="data" type="list">
      <desc>
        Converts all strings in the list to uppercase.
      </desc>
    </arg>
  </args>
  <lvalue id="result" type="list" array="list">
    <ret id="uppercased" status="$ACKNOWLEDGE">
      <desc>
         The list, with strings converted to uppercase.
      </desc>
    </ret>
  </lvalue>
  <body>
str s = toupper ( "abc" ) ; /* s contains "ABC" */	
  </body>
   <exceptions>
      <exception status="%BOUNDS">
         <desc>Subscript is out of bounds in toupper()</desc>
      </exception>
   </exceptions>   <examples>
    <example>
      toupper.hyp
    </example>
  </examples>
  <links />
</func>

