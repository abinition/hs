<func id="node_firstchild">
   <brief>Returns the first child of a node.</brief>

   <args>
      <arg id="node" type="list">
         <desc>A list variable.</desc>
      </arg>
   </args>

   <lvalue id="result" type="list">
      <ret id="element" status="$ACKNOWLEDGE">
         <desc>Returns the first child node of the argument. Child nodes are of type list. If the node has no child nodes an empty string is returned</desc>
      </ret>
   </lvalue>

   <body />

