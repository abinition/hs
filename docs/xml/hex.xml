<func id="hex" isTypedef="1">
	<brief>Create or convert a variable or value into a hex format</brief>
	<args>
		<arg id="value" type="list">
			<desc>
				A value of any type. 
			</desc>
		</arg>
	</args>
	<lvalue id="result" type="hex" array="vector">
		<ret id="0x00000000 - 0xFFFFFFFF" status="$ACKNOWLEDGE">
			<desc>
			A hex value is 4 bytes.
			It is displayed as an 8 character hex number.
		   </desc>
		</ret>
	</lvalue>
	<exceptions>
	</exceptions>
	<examples>
		<example>hex.hyp</example>
	</examples>
	<links>
		<link>octal</link>
	</links>
</func>
