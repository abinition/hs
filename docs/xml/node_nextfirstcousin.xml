<func id="node_nextfirstcousin">
   <brief>Returns the next first cousin of a node.</brief>

   <args>
      <arg id="node" type="list">
         <desc>A list variable.</desc>
      </arg>
   </args>

   <lvalue id="result" type="list">
      <ret id="element" status="$ACKNOWLEDGE">
         <desc>Returns the first child node of the argument's parent's next sibling node or an empty string if no next cousin is present. Nodes are of type list.</desc>
      </ret>
      <ret id="empty string" status="%INVALID">
         <desc>If the node is a root node, then it cannot have a cousin, and an empty string is returned.</desc>
      </ret>
   </lvalue>

   <body />
   
   <examples>
    <example>node_nextfirstcousin.hyp</example>
   </examples>

