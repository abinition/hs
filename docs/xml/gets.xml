<func id="gets">
  <brief>
    Get string data from stdin.
  </brief>
  <args>
    <arg id="prompt" type="str">
         <desc>
         the prompt (echoed to stdout).
         </desc>
      </arg>

  </args>
  <lvalue id="result" type="string">
      <ret id="string" status="$ACKNOWLEDGE">
         <desc>The next line from the file.</desc>
      </ret>
      <ret id="NULLstring" status="%EOF">
         <desc>At the end of stdin, the result is "".</desc>
      </ret>

  </lvalue>
  <body ref="get.htm" />
  <exceptions />
  <examples>
    <example>
      gets.hyp
    </example>
  </examples>
  <links />
</func>

